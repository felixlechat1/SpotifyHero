<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/start"
        android:layout_width="158dp"
        android:layout_height="47dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Start song"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/drum1"
        android:layout_width="207dp"
        android:layout_height="268dp"
        android:layout_marginTop="400dp"
        android:src="@drawable/drum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/circle"
        android:layout_width="59dp"
        android:layout_height="82dp"
        android:layout_marginStart="70dp"
        android:src="@drawable/circle"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/drum1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/circle2"
        android:layout_width="58dp"
        android:layout_height="90dp"
        android:layout_marginStart="19dp"
        android:src="@drawable/circle"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/drum2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/circle_clap"
        android:layout_width="58dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/circle"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/clap"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="379dp"
        android:layout_height="24dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drum1"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.61969906" />

    <ImageView
        android:id="@+id/clap"
        android:layout_width="100dp"
        android:layout_height="111dp"
        android:layout_marginTop="390dp"
        android:src="@drawable/clap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/drum2"
        android:layout_width="80dp"
        android:layout_height="112dp"
        android:layout_marginTop="505dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/drum2"
        app:layout_constraintEnd_toStartOf="@+id/clap"
        app:layout_constraintStart_toEndOf="@+id/drum1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textHome"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="75dp"
        android:textColor="#050505"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
